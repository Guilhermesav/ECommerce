@model IEnumerable<ECommerce.Model.CompraModel>

@{
    ViewData["Title"] = "UserCompras";
}

<h1>Historico de Compras</h1>


<table class="table">
    <thead>
        <tr>
            <th>
               <a @Html.DisplayNameFor(model => model.ProdutoId)>Id</a>
            </th>
            <th>
               <a @Html.DisplayNameFor(model => model.ProdutoNome)>Nome</a>
            </th>
            <th>
                <a @Html.DisplayNameFor(model => model.ProdutoImagem)>Imagem </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preço)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comprador)
            </th>
            <th>
               <a @Html.DisplayNameFor(model => model.FormaDePagamento)>Forma de Pagamento</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdutoNome)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ProdutoImagem)" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preço)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormaDePagamento)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-controller="Produto" asp-route-id="@item.ProdutoId">Details</a> |
                
            </td>
        </tr>
}
    </tbody>
</table>
